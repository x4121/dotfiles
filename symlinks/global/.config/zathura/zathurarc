## settings
# show filename as title
set window-title-basename true
# search while typing
set incremental-search
# no gui elements
set guioptions ""

set recolor "true"

## colors
# pager
set default-bg              "#282828"
set default-fg              "#ebdbb2"
# input
set inputbar-bg             "#282828"
set inputbar-fg             "#ebdbb2"
# statusbar/filename
set statusbar-bg            "#3c3836"
set statusbar-fg            "#ebdbb2"
# notifications
set notification-bg         "#3c3836"
set notification-fg         "#ebdbb2"
set notification-error-bg   "#3c3836"
set notification-error-fg   "#fe8019"
set notification-warning-bg "#3c3836"
set notification-warning-fg "#fabd2f"
# command/file completion
set completion-bg           "#3c3836"
set completion-fg           "#ebdbb2"
set completion-highlight-bg "#3c3836"
set completion-highlight-fg "#83a598"
# search/follow highlight
set highlight-color         "#fabd2f"
set highlight-active-color  "#fe8019"
# index/toc
set index-bg                "#3c3836"
set index-fg                "#ebdbb2"
set index-active-bg         "#3c3836"
set index-active-fg         "#fe8019"
# recolor in dark mode
set recolor-darkcolor       "#ebdbb2"
set recolor-lightcolor      "#282828"

## mappings
# next/prev page
map [normal]     d     navigate next
map [fullscreen] d     navigate next
map [normal]     u     navigate previous
map [fullscreen] u     navigate previous
# quit
map [normal]     <C-w> quit
map [fullscreen] <C-w> quit
# recolor as solarized dark
map [normal]     c     set recolor
map [fullscreen] c     set recolor
# toggle statusbar/filename
map [normal]     b     toggle_statusbar
map [fullscreen] b     toggle_statusbar
# toggle toc/index
map [normal]     i     toggle_index
map [fullscreen] i     toggle_index
map [index]      i     toggle_index
# toggle "book mode" (2 pages horizontal)
map [normal]     h     toggle_page_mode 2
map [fullscreen] h     toggle_page_mode 2
# toggle fullscreen
map              <F11> toggle_fullscreen
