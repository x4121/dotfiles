## settings
# show filename as title
set window-title-basename true
# search while typing
set incremental-search
# no gui elements
set guioptions ""

## colors
# pager
set default-bg              "#002b36"
set default-fg              "#839496"
# input
set inputbar-bg             "#002b36"
set inputbar-fg             "#839496"
# statusbar/filename
set statusbar-bg            "#073642"
set statusbar-fg            "#839496"
# notifications
set notification-bg         "#073642"
set notification-fg         "#839496"
set notification-error-bg   "#073642"
set notification-error-fg   "#cb4b16"
set notification-warning-bg "#073642"
set notification-warning-fg "#b58900"
# command/file completion
set completion-bg           "#073642"
set completion-fg           "#839496"
set completion-highlight-bg "#073642"
set completion-highlight-fg "#268bd2"
# search/follow highlight
set highlight-color         "#b58900"
set highlight-active-color  "#cb4b16"
# index/toc
set index-bg                "#073642"
set index-fg                "#839496"
set index-active-bg         "#073642"
set index-active-fg         "#cb4b16"
# recolor in dark mode
set recolor-darkcolor       "#839496"
set recolor-lightcolor      "#002b36"

## mappings
# next page
map [normal]     d     navigate next
map [fullscreen] d     navigate next
# prev page
map [normal]     u     navigate previous
map [fullscreen] u     navigate previous
# quit
map [normal]     <C-w> quit
map [fullscreen] <C-w> quit
# recolor as solarized dark
map [normal]     c     set recolor
map [fullscreen] c     set recolor
# toggle statusbar/filename
map [normal]     b     toggle_statusbar
map [fullscreen] b     toggle_statusbar
# toggle "book mode" (2 pages horizontal)
map [normal]     h     toggle_page_mode 2
map [fullscreen] h     toggle_page_mode 2
# toggle fullscreen
map              <F11> toggle_fullscreen
